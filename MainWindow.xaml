<Window x:Class="SimGamepad.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="Sim Gamepad"
        Width="800" Height="550"
        ResizeMode="CanResize"
        WindowStartupLocation="CenterScreen"
        WindowStyle="None"
        AllowsTransparency="True"
        Background="Transparent">

    <Window.Resources>
        <!-- COLORS (DARK GLASS THEME) -->
        <SolidColorBrush x:Key="AppBackgroundBrush" Color="#E6050505"/>
        <SolidColorBrush x:Key="SidebarBrush" Color="#20FFFFFF"/>
        <SolidColorBrush x:Key="CardBrush" Color="#15FFFFFF"/>
        <SolidColorBrush x:Key="CardHoverBrush" Color="#25FFFFFF"/>
        <SolidColorBrush x:Key="TextPrimary" Color="#FFFFFF"/>
        <SolidColorBrush x:Key="TextSecondary" Color="#AAAAAA"/>
        
        <Color x:Key="AccentColor">#00E5FF</Color>
        <SolidColorBrush x:Key="AccentBrush" Color="{StaticResource AccentColor}"/>
        
        <Style x:Key="NavButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="Foreground" Value="{StaticResource TextSecondary}"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Padding" Value="15,10"/>
            <Setter Property="HorizontalContentAlignment" Value="Left"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="border" Background="{TemplateBinding Background}" CornerRadius="8" Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="{TemplateBinding HorizontalContentAlignment}" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="border" Property="Background" Value="#15FFFFFF"/>
                                <Setter Property="Foreground" Value="{StaticResource TextPrimary}"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <Style x:Key="CaptionButtonStyle" TargetType="Button">
            <Setter Property="Width" Value="46"/>
            <Setter Property="Height" Value="32"/>
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="border" Background="{TemplateBinding Background}">
                            <Path x:Name="icon" Data="{Binding Content, RelativeSource={RelativeSource TemplatedParent}}" 
                                  Fill="{TemplateBinding Foreground}" 
                                  Width="10" Height="10" Stretch="Uniform"
                                  HorizontalAlignment="Center" VerticalAlignment="Center"
                                  SnapsToDevicePixels="True"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="border" Property="Background" Value="#20FFFFFF"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter TargetName="border" Property="Background" Value="#30FFFFFF"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <Style x:Key="CloseButtonStyle" TargetType="Button">
            <Setter Property="Width" Value="46"/>
            <Setter Property="Height" Value="32"/>
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="border" Background="{TemplateBinding Background}">
                            <Path x:Name="icon" Data="{Binding Content, RelativeSource={RelativeSource TemplatedParent}}" 
                                  Fill="{TemplateBinding Foreground}" 
                                  Width="10" Height="10" Stretch="Uniform"
                                  HorizontalAlignment="Center" VerticalAlignment="Center"
                                  SnapsToDevicePixels="True"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="border" Property="Background" Value="#E81123"/>
                                <Setter Property="Foreground" Value="White"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter TargetName="border" Property="Background" Value="#CC8B0000"/>
                                <Setter Property="Foreground" Value="White"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

    </Window.Resources>
    
    <!-- Main Window Border -->
    <Border Background="{StaticResource AppBackgroundBrush}" 
            BorderBrush="#40FFFFFF" 
            BorderThickness="1" 
            CornerRadius="8">
        
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="220"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <!-- SIDEBAR -->
            <Border Grid.Column="0" Background="{StaticResource SidebarBrush}" CornerRadius="8,0,0,8" BorderThickness="0,0,1,0" BorderBrush="#20FFFFFF">
                <Grid Margin="12">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <!-- App Title -->
                    <StackPanel Grid.Row="0" Margin="10,20,0,30">
                        <TextBlock Text="SIM" FontSize="12" FontWeight="Bold" Foreground="{StaticResource AccentBrush}"/>
                        <TextBlock Text="GAMEPAD" FontSize="20" FontWeight="Heavy" Foreground="{StaticResource TextPrimary}" Margin="0,-4,0,0"/>
                    </StackPanel>

                    <!-- Nav Menu -->
                    <StackPanel Grid.Row="1">
                        <TextBlock Text="CONNECTION" FontSize="10" Foreground="{StaticResource TextSecondary}" FontWeight="Bold" Margin="10,0,0,10"/>
                        
                        <Button Click="Wifi_Click" Style="{StaticResource NavButtonStyle}" Margin="0,2">
                            <StackPanel Orientation="Horizontal">
                                <Path Data="M12.01 21.49L23.64 7c-.45-.34-4.93-4-11.64-4C5.28 3 .81 6.66.36 7l11.63 14.49.01.01.01-.01z" 
                                      Fill="{Binding Foreground, RelativeSource={RelativeSource AncestorType=Button}}" 
                                      Width="16" Height="14" Stretch="Uniform" Margin="0,0,12,0"/>
                                <TextBlock Text="Wi-Fi"/>
                            </StackPanel>
                        </Button>

                        <Button Click="Bluetooth_Click" Style="{StaticResource NavButtonStyle}" Margin="0,2">
                            <StackPanel Orientation="Horizontal">
                                <Path Data="M17.71 7.71L12 2h-1v7.59L6.41 5 5 6.41 10.59 12 5 17.59 6.41 19 11 14.41V22h1l5.71-5.71L13.41 12L17.71 7.71z M13 5.83 l1.88 1.88L13 9.59V5.83z M13 18.17v-3.76l1.88 1.88L13 18.17z" 
                                      Fill="{Binding Foreground, RelativeSource={RelativeSource AncestorType=Button}}" 
                                      Width="16" Height="16" Stretch="Uniform" Margin="0,0,12,0"/>
                                <TextBlock Text="Bluetooth"/>
                            </StackPanel>
                        </Button>

                        <Button Click="Usb_Click" Style="{StaticResource NavButtonStyle}" Margin="0,2">
                            <StackPanel Orientation="Horizontal">
                                <Path Data="M6 2h8v5c0 1.1-.9 2-2 2h-4c-1.1 0-2-.9-2-2V2zM4 10h12c1.1 0 2 .9 2 2v10c0 1.1-.9 2-2 2H4c-1.1 0-2-.9-2-2V12c0-1.1.9-2 2-2z" 
                                      Fill="{Binding Foreground, RelativeSource={RelativeSource AncestorType=Button}}" 
                                      Width="16" Height="14" Stretch="Uniform" Margin="0,0,12,0"/>
                                <TextBlock Text="USB"/>
                            </StackPanel>
                        </Button>
                    </StackPanel>

                    <!-- Status Indicator -->
                    <Border Grid.Row="2" Background="#10FFFFFF" CornerRadius="12" Padding="12">
                        <StackPanel>
                            <TextBlock Text="STATUS" FontSize="9" FontWeight="Bold" Foreground="{StaticResource TextSecondary}"/>
                            <TextBlock Text="{Binding StatusText}" FontSize="12" FontWeight="SemiBold" Foreground="{StaticResource TextPrimary}" Margin="0,4,0,0" TextWrapping="Wrap"/>
                        </StackPanel>
                    </Border>
                </Grid>
            </Border>

            <!-- CONTENT AREA -->
            <Grid Grid.Column="1">
                <Grid.RowDefinitions>
                    <RowDefinition Height="32"/> <!-- Custom TitleBar -->
                    <RowDefinition Height="Auto"/> <!-- Header -->
                    <RowDefinition Height="*"/> <!-- Main -->
                </Grid.RowDefinitions>

                <!-- Custom Title Bar -->
                <Grid Grid.Row="0" Background="Transparent" MouseLeftButtonDown="Window_MouseLeftButtonDown">
                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" VerticalAlignment="Top">
                        <Button x:Name="BtnMinimize" Click="Minimize_Click" Style="{StaticResource CaptionButtonStyle}" Content="M0,14 L10,14 L10,16 L0,16 Z"/>
                        <Button x:Name="BtnMaximize" Click="Maximize_Click" Style="{StaticResource CaptionButtonStyle}" Content="M1,1 L9,1 L9,9 L1,9 Z M0,0 L10,0 L10,10 L0,10 Z"/>
                        <Button x:Name="BtnClose" Click="Close_Click" Style="{StaticResource CloseButtonStyle}" Content="M0.7,0 L5,4.3 L9.3,0 L10,0.7 L5.7,5 L10,9.3 L9.3,10 L5,5.7 L0.7,10 L0,9.3 L4.3,5 L0,0.7 Z"/>
                    </StackPanel>
                </Grid>

                <!-- Dynamic Header -->
                <StackPanel Grid.Row="1" Margin="30,10,30,20">
                    <TextBlock Text="{Binding ActiveModeText}" FontSize="32" FontWeight="Bold" Foreground="{StaticResource TextPrimary}">
                        <TextBlock.Effect>
                            <DropShadowEffect BlurRadius="15" ShadowDepth="0" Opacity="0.5" Color="#00E5FF"/>
                        </TextBlock.Effect>
                    </TextBlock>
                    <TextBlock Text="Connect your device to start" FontSize="14" Foreground="{StaticResource TextSecondary}"/>
                </StackPanel>

                <!-- Content Panels -->
                <Grid Grid.Row="2" Margin="30,0,30,30">
                    
                    <!-- WI-FI & QR -->
                    <Grid Visibility="{Binding WifiQrVisibility}" VerticalAlignment="Center" HorizontalAlignment="Left">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        
                        <!-- QR Card -->
                        <Border Background="{StaticResource CardBrush}" CornerRadius="16" Padding="16" BorderThickness="1" BorderBrush="#20FFFFFF">
                            <Image Width="250" Height="250" Source="{Binding QrImage}" RenderOptions.BitmapScalingMode="HighQuality"/>
                        </Border>
                        
                        <!-- Instructions -->
                        <StackPanel Grid.Column="1" Margin="30,0,0,0" VerticalAlignment="Center">
                            <TextBlock Text="Scan to Connect" FontSize="18" FontWeight="SemiBold" Foreground="{StaticResource TextPrimary}" Margin="0,0,0,10"/>
                            <TextBlock Text="{Binding ConnectionString}" Foreground="{StaticResource AccentBrush}" FontSize="12" Opacity="0.8" Margin="0,0,0,20" TextWrapping="Wrap"/>
                            
                            <StackPanel Orientation="Horizontal" Margin="0,0,0,8">
                                <TextBlock Text="1." FontWeight="Bold" Foreground="{StaticResource AccentBrush}" Width="20"/>
                                <TextBlock Text="Open SimGamepad App" Foreground="{StaticResource TextSecondary}"/>
                            </StackPanel>
                            <StackPanel Orientation="Horizontal">
                                <TextBlock Text="2." FontWeight="Bold" Foreground="{StaticResource AccentBrush}" Width="20"/>
                                <TextBlock Text="Scan this code" Foreground="{StaticResource TextSecondary}"/>
                            </StackPanel>
                        </StackPanel>
                    </Grid>

                    <!-- BLUETOOTH INFO -->
                    <Border Visibility="{Binding BluetoothInfoVisibility}" Background="{StaticResource CardBrush}" CornerRadius="16" Padding="30" VerticalAlignment="Top" BorderThickness="1" BorderBrush="#20FFFFFF"> 
                        <StackPanel>
                            <TextBlock Text="Bluetooth Pairing" FontSize="20" FontWeight="SemiBold" Foreground="{StaticResource TextPrimary}" Margin="0,0,0,20"/>
                            <TextBlock Text="1. Enable Bluetooth on PC &amp; Phone" Foreground="{StaticResource TextSecondary}" FontSize="16" Margin="0,0,0,10"/>
                            <TextBlock Text="2. Pair your devices in Windows Settings" Foreground="{StaticResource TextSecondary}" FontSize="16" Margin="0,0,0,10"/>
                            <TextBlock Text="3. Select PC in the Mobile App" Foreground="{StaticResource TextSecondary}" FontSize="16"/>
                        </StackPanel>
                    </Border>

                    <!-- USB INFO -->
                    <Border Visibility="{Binding UsbInfoVisibility}" Background="{StaticResource CardBrush}" CornerRadius="16" Padding="30" VerticalAlignment="Top" BorderThickness="1" BorderBrush="#20FFFFFF">
                        <StackPanel>
                            <TextBlock Text="USB Tethering" FontSize="20" FontWeight="SemiBold" Foreground="{StaticResource TextPrimary}" Margin="0,0,0,20"/>
                            <TextBlock Text="1. Enable USB Debugging on Phone" Foreground="{StaticResource TextSecondary}" FontSize="16" Margin="0,0,0,10"/>
                            <TextBlock Text="2. Connect via USB Cable" Foreground="{StaticResource TextSecondary}" FontSize="16" Margin="0,0,0,10"/>
                            <TextBlock Text="3. Allow connection prompt on Phone" Foreground="{StaticResource TextSecondary}" FontSize="16"/>
                        </StackPanel>
                    </Border>
                </Grid>
                
                <!-- Footer -->
                <Grid Grid.Row="2" VerticalAlignment="Bottom" HorizontalAlignment="Right" Margin="0,0,20,20">
                     <Button Content="Branco Vennâ„¢"
                             Click="BrancoVenn_Click"
                             FontSize="10"
                             FontWeight="SemiBold"
                             Foreground="{StaticResource TextSecondary}"
                             Background="#10FFFFFF"
                             BorderThickness="1"
                             BorderBrush="Transparent"
                             Padding="12,6"
                             Cursor="Hand">
                         <Button.Template>
                             <ControlTemplate TargetType="Button">
                                 <Border x:Name="border" Background="{TemplateBinding Background}" BorderBrush="{TemplateBinding BorderBrush}" BorderThickness="{TemplateBinding BorderThickness}" CornerRadius="12" Padding="{TemplateBinding Padding}">
                                    <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                 </Border>
                                 <ControlTemplate.Triggers>
                                     <Trigger Property="IsMouseOver" Value="True">
                                         <Setter TargetName="border" Property="Background" Value="#20FFFFFF"/>
                                         <Setter TargetName="border" Property="BorderBrush" Value="{StaticResource AccentBrush}"/>
                                         <Setter Property="Foreground" Value="{StaticResource AccentBrush}"/>
                                     </Trigger>
                                 </ControlTemplate.Triggers>
                             </ControlTemplate>
                         </Button.Template>
                     </Button>
                </Grid>
                
            </Grid>
        </Grid>
    </Border>
</Window>
