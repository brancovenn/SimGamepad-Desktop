<Window x:Class="SimGamepad.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="Sim Gamepad"
        Width="800" Height="550"
        ResizeMode="CanResize"
        WindowStartupLocation="CenterScreen"
        WindowStyle="None"
        AllowsTransparency="True"
        Background="Transparent">

    <Window.Resources>
        <!-- COLORS (DARK GLASS THEME) -->
        <SolidColorBrush x:Key="AppBackgroundBrush" Color="#E6050505"/>
        <SolidColorBrush x:Key="SidebarBrush" Color="#20FFFFFF"/>
        <SolidColorBrush x:Key="CardBrush" Color="#15FFFFFF"/>
        <SolidColorBrush x:Key="CardHoverBrush" Color="#25FFFFFF"/>
        <SolidColorBrush x:Key="TextPrimary" Color="#FFFFFF"/>
        <SolidColorBrush x:Key="TextSecondary" Color="#AAAAAA"/>
        
        <Color x:Key="AccentColor">#00E5FF</Color>
        <SolidColorBrush x:Key="AccentBrush" Color="{StaticResource AccentColor}"/>
        
        <Style x:Key="NavButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="Foreground" Value="{StaticResource TextSecondary}"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Padding" Value="15,10"/>
            <Setter Property="HorizontalContentAlignment" Value="Left"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="border" Background="{TemplateBinding Background}" CornerRadius="8" Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="{TemplateBinding HorizontalContentAlignment}" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="border" Property="Background" Value="#15FFFFFF"/>
                                <Setter Property="Foreground" Value="{StaticResource TextPrimary}"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <Style x:Key="CaptionButtonStyle" TargetType="Button">
            <Setter Property="Width" Value="46"/>
            <Setter Property="Height" Value="32"/>
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="border" Background="{TemplateBinding Background}">
                            <Path x:Name="icon" Data="{Binding Content, RelativeSource={RelativeSource TemplatedParent}}" 
                                  Fill="{TemplateBinding Foreground}" 
                                  Width="10" Height="10" Stretch="Uniform"
                                  HorizontalAlignment="Center" VerticalAlignment="Center"
                                  SnapsToDevicePixels="True"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="border" Property="Background" Value="#20FFFFFF"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter TargetName="border" Property="Background" Value="#30FFFFFF"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <Style x:Key="CloseButtonStyle" TargetType="Button">
            <Setter Property="Width" Value="46"/>
            <Setter Property="Height" Value="32"/>
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="border" Background="{TemplateBinding Background}">
                            <Path x:Name="icon" Data="{Binding Content, RelativeSource={RelativeSource TemplatedParent}}" 
                                  Fill="{TemplateBinding Foreground}" 
                                  Width="10" Height="10" Stretch="Uniform"
                                  HorizontalAlignment="Center" VerticalAlignment="Center"
                                  SnapsToDevicePixels="True"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="border" Property="Background" Value="#E81123"/>
                                <Setter Property="Foreground" Value="White"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter TargetName="border" Property="Background" Value="#CC8B0000"/>
                                <Setter Property="Foreground" Value="White"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

    </Window.Resources>
    
    <!-- Main Window Border -->
    <Border Background="{StaticResource AppBackgroundBrush}" 
            BorderBrush="#40FFFFFF" 
            BorderThickness="1" 
            CornerRadius="8">
        
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="220"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <!-- SIDEBAR -->
            <Border Grid.Column="0" Background="{StaticResource SidebarBrush}" CornerRadius="8,0,0,8" BorderThickness="0,0,1,0" BorderBrush="#20FFFFFF">
                <Grid Margin="12">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <!-- App Title -->
                    <StackPanel Grid.Row="0" Margin="10,20,0,30">
                        <TextBlock Text="SIM" FontSize="12" FontWeight="Bold" Foreground="{StaticResource AccentBrush}"/>
                        <TextBlock Text="GAMEPAD" FontSize="20" FontWeight="Heavy" Foreground="{StaticResource TextPrimary}" Margin="0,-4,0,0"/>
                    </StackPanel>

                    <!-- Nav Menu -->
                    <StackPanel Grid.Row="1">
                        <TextBlock Text="CONNECTION" FontSize="10" Foreground="{StaticResource TextSecondary}" FontWeight="Bold" Margin="10,0,0,10"/>
                        
                        <Button Click="Wifi_Click" Style="{StaticResource NavButtonStyle}" Margin="0,2">
                            <StackPanel Orientation="Horizontal">
                                <Path Data="M12.01 21.49L23.64 7c-.45-.34-4.93-4-11.64-4C5.28 3 .81 6.66.36 7l11.63 14.49.01.01.01-.01z" 
                                      Fill="{Binding Foreground, RelativeSource={RelativeSource AncestorType=Button}}" 
                                      Width="16" Height="14" Stretch="Uniform" Margin="0,0,12,0"/>
                                <TextBlock Text="Wi-Fi"/>
                            </StackPanel>
                        </Button>

                        <Button Click="Bluetooth_Click" Style="{StaticResource NavButtonStyle}" Margin="0,2">
                            <StackPanel Orientation="Horizontal">
                                <Path Data="M17.71 7.71L12 2h-1v7.59L6.41 5 5 6.41 10.59 12 5 17.59 6.41 19 11 14.41V22h1l5.71-5.71L13.41 12L17.71 7.71z M13 5.83 l1.88 1.88L13 9.59V5.83z M13 18.17v-3.76l1.88 1.88L13 18.17z" 
                                      Fill="{Binding Foreground, RelativeSource={RelativeSource AncestorType=Button}}" 
                                      Width="16" Height="16" Stretch="Uniform" Margin="0,0,12,0"/>
                                <TextBlock Text="Bluetooth"/>
                            </StackPanel>
                        </Button>

                        <Button Click="Usb_Click" Style="{StaticResource NavButtonStyle}" Margin="0,2">
                            <StackPanel Orientation="Horizontal">
                                <Path Data="M6 2h8v5c0 1.1-.9 2-2 2h-4c-1.1 0-2-.9-2-2V2zM4 10h12c1.1 0 2 .9 2 2v10c0 1.1-.9 2-2 2H4c-1.1 0-2-.9-2-2V12c0-1.1.9-2 2-2z" 
                                      Fill="{Binding Foreground, RelativeSource={RelativeSource AncestorType=Button}}" 
                                      Width="16" Height="14" Stretch="Uniform" Margin="0,0,12,0"/>
                                <TextBlock Text="USB"/>
                            </StackPanel>
                        </Button>
                    </StackPanel>

                    <!-- Status Indicator -->
                    <Border Grid.Row="2" Background="#10FFFFFF" CornerRadius="12" Padding="12">
                        <StackPanel>
                            <TextBlock Text="STATUS" FontSize="9" FontWeight="Bold" Foreground="{StaticResource TextSecondary}"/>
                            <TextBlock Text="{Binding StatusText}" FontSize="12" FontWeight="SemiBold" Foreground="{StaticResource TextPrimary}" Margin="0,4,0,0" TextWrapping="Wrap"/>
                        </StackPanel>
                    </Border>
                </Grid>
            </Border>

            <!-- CONTENT AREA -->
            <Grid Grid.Column="1">
                <Grid.RowDefinitions>
                    <RowDefinition Height="32"/> <!-- Custom TitleBar -->
                    <RowDefinition Height="Auto"/> <!-- Header -->
                    <RowDefinition Height="*"/> <!-- Main -->
                </Grid.RowDefinitions>

                <!-- Custom Title Bar -->
                <Grid Grid.Row="0" Background="Transparent" MouseLeftButtonDown="Window_MouseLeftButtonDown">
                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" VerticalAlignment="Top">
                        <Button x:Name="BtnMinimize" Click="Minimize_Click" Style="{StaticResource CaptionButtonStyle}" Content="M0,14 L10,14 L10,16 L0,16 Z"/>
                        <Button x:Name="BtnMaximize" Click="Maximize_Click" Style="{StaticResource CaptionButtonStyle}" Content="M1,1 L9,1 L9,9 L1,9 Z M0,0 L10,0 L10,10 L0,10 Z"/>
                        <Button x:Name="BtnClose" Click="Close_Click" Style="{StaticResource CloseButtonStyle}" Content="M0.7,0 L5,4.3 L9.3,0 L10,0.7 L5.7,5 L10,9.3 L9.3,10 L5,5.7 L0.7,10 L0,9.3 L4.3,5 L0,0.7 Z"/>
                    </StackPanel>
                </Grid>

                <!-- Dynamic Header -->
                <StackPanel Grid.Row="1" Margin="30,10,30,20">
                    <TextBlock Text="{Binding ActiveModeText}" FontSize="32" FontWeight="Bold" Foreground="{StaticResource TextPrimary}">
                        <TextBlock.Effect>
                            <DropShadowEffect BlurRadius="15" ShadowDepth="0" Opacity="0.5" Color="#00E5FF"/>
                        </TextBlock.Effect>
                    </TextBlock>
                    <TextBlock Text="Connect your device to start" FontSize="14" Foreground="{StaticResource TextSecondary}"/>
                </StackPanel>

                <!-- Content Panels -->
                <Grid Grid.Row="2" Margin="30,0,30,30">
                    
                    <!-- WI-FI &amp; QR -->
                    <Grid Visibility="{Binding WifiQrVisibility}" VerticalAlignment="Center" HorizontalAlignment="Left">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        
                        <!-- QR Card -->
                        <Border Background="{StaticResource CardBrush}" CornerRadius="16" Padding="16" BorderThickness="1" BorderBrush="#20FFFFFF">
                            <Image Width="250" Height="250" Source="{Binding QrImage}" RenderOptions.BitmapScalingMode="HighQuality"/>
                        </Border>
                        
                        <!-- Instructions -->
                        <StackPanel Grid.Column="1" Margin="30,0,0,0" VerticalAlignment="Center">
                            <TextBlock Text="Scan to Connect" FontSize="20" FontWeight="SemiBold" Foreground="{StaticResource TextPrimary}" Margin="0,0,0,6"/>
                            <TextBlock Text="{Binding ConnectionString}" Foreground="{StaticResource AccentBrush}" FontSize="13" Opacity="0.9" Margin="0,0,0,24" TextWrapping="Wrap"/>
                            
                            <Grid Margin="0,0,0,16">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>
                                <Border Width="28" Height="28" CornerRadius="14" Background="#1A00E5FF" BorderBrush="#4000E5FF" BorderThickness="1" Margin="0,0,14,0">
                                    <TextBlock Text="1" Foreground="{StaticResource AccentBrush}" FontSize="13" FontWeight="Bold" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                </Border>
                                <TextBlock Grid.Column="1" Text="Open SimGamepad App" Foreground="#E0FFFFFF" FontSize="14" VerticalAlignment="Center"/>
                            </Grid>
                            
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>
                                <Border Width="28" Height="28" CornerRadius="14" Background="#1A00E5FF" BorderBrush="#4000E5FF" BorderThickness="1" Margin="0,0,14,0">
                                    <TextBlock Text="2" Foreground="{StaticResource AccentBrush}" FontSize="13" FontWeight="Bold" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                </Border>
                                <TextBlock Grid.Column="1" Text="Scan this code" Foreground="#E0FFFFFF" FontSize="14" VerticalAlignment="Center"/>
                            </Grid>
                        </StackPanel>
                    </Grid>

                    <!-- BLUETOOTH INFO -->
                    <Border Visibility="{Binding BluetoothInfoVisibility}" Background="{StaticResource CardBrush}" CornerRadius="16" Padding="35,30" VerticalAlignment="Top" BorderThickness="1" BorderBrush="#20FFFFFF"> 
                        <StackPanel>
                            <StackPanel Orientation="Horizontal" Margin="0,0,0,24">
                                <Border Width="40" Height="40" CornerRadius="12" Background="#1A00E5FF" Margin="0,0,16,0">
                                    <Path Data="M17.71 7.71L12 2h-1v7.59L6.41 5 5 6.41 10.59 12 5 17.59 6.41 19 11 14.41V22h1l5.71-5.71L13.41 12L17.71 7.71z M13 5.83 l1.88 1.88L13 9.59V5.83z M13 18.17v-3.76l1.88 1.88L13 18.17z" 
                                          Fill="{StaticResource AccentBrush}" Width="20" Height="20" Stretch="Uniform"/>
                                </Border>
                                <TextBlock Text="Bluetooth Pairing" FontSize="22" FontWeight="SemiBold" Foreground="{StaticResource TextPrimary}" VerticalAlignment="Center"/>
                            </StackPanel>

                            <Grid Margin="0,0,0,16">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>
                                <Border Width="28" Height="28" CornerRadius="14" Background="#1A00E5FF" BorderBrush="#4000E5FF" BorderThickness="1" Margin="0,0,16,0" VerticalAlignment="Top">
                                    <TextBlock Text="1" Foreground="{StaticResource AccentBrush}" FontSize="13" FontWeight="Bold" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                </Border>
                                <TextBlock Grid.Column="1" Text="Enable Bluetooth on your PC &amp; Phone" Foreground="#E0FFFFFF" FontSize="15" VerticalAlignment="Center" TextWrapping="Wrap"/>
                            </Grid>

                            <Grid Margin="0,0,0,16">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>
                                <Border Width="28" Height="28" CornerRadius="14" Background="#1A00E5FF" BorderBrush="#4000E5FF" BorderThickness="1" Margin="0,0,16,0" VerticalAlignment="Top">
                                    <TextBlock Text="2" Foreground="{StaticResource AccentBrush}" FontSize="13" FontWeight="Bold" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                </Border>
                                <TextBlock Grid.Column="1" Text="Pair your devices in Windows Settings" Foreground="#E0FFFFFF" FontSize="15" VerticalAlignment="Center" TextWrapping="Wrap"/>
                            </Grid>

                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>
                                <Border Width="28" Height="28" CornerRadius="14" Background="#1A00E5FF" BorderBrush="#4000E5FF" BorderThickness="1" Margin="0,0,16,0" VerticalAlignment="Top">
                                    <TextBlock Text="3" Foreground="{StaticResource AccentBrush}" FontSize="13" FontWeight="Bold" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                </Border>
                                <TextBlock Grid.Column="1" Text="Select your PC in the Mobile App" Foreground="#E0FFFFFF" FontSize="15" VerticalAlignment="Center" TextWrapping="Wrap"/>
                            </Grid>
                        </StackPanel>
                    </Border>

                    <!-- USB INFO -->
                    <Border Visibility="{Binding UsbInfoVisibility}" Background="{StaticResource CardBrush}" CornerRadius="16" Padding="35,30" VerticalAlignment="Top" BorderThickness="1" BorderBrush="#20FFFFFF">
                        <StackPanel>
                            <StackPanel Orientation="Horizontal" Margin="0,0,0,24">
                                <Border Width="40" Height="40" CornerRadius="12" Background="#1A00E5FF" Margin="0,0,16,0">
                                    <Path Data="M6 2h8v5c0 1.1-.9 2-2 2h-4c-1.1 0-2-.9-2-2V2zM4 10h12c1.1 0 2 .9 2 2v10c0 1.1-.9 2-2 2H4c-1.1 0-2-.9-2-2V12c0-1.1.9-2 2-2z" 
                                          Fill="{StaticResource AccentBrush}" Width="20" Height="20" Stretch="Uniform"/>
                                </Border>
                                <TextBlock Text="USB Tethering" FontSize="22" FontWeight="SemiBold" Foreground="{StaticResource TextPrimary}" VerticalAlignment="Center"/>
                            </StackPanel>

                            <Grid Margin="0,0,0,16">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>
                                <Border Width="28" Height="28" CornerRadius="14" Background="#1A00E5FF" BorderBrush="#4000E5FF" BorderThickness="1" Margin="0,0,16,0" VerticalAlignment="Top">
                                    <TextBlock Text="1" Foreground="{StaticResource AccentBrush}" FontSize="13" FontWeight="Bold" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                </Border>
                                <TextBlock Grid.Column="1" Text="Enable USB Debugging on your Phone" Foreground="#E0FFFFFF" FontSize="15" VerticalAlignment="Center" TextWrapping="Wrap"/>
                            </Grid>

                            <Grid Margin="0,0,0,16">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>
                                <Border Width="28" Height="28" CornerRadius="14" Background="#1A00E5FF" BorderBrush="#4000E5FF" BorderThickness="1" Margin="0,0,16,0" VerticalAlignment="Top">
                                    <TextBlock Text="2" Foreground="{StaticResource AccentBrush}" FontSize="13" FontWeight="Bold" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                </Border>
                                <TextBlock Grid.Column="1" Text="Connect your devices via USB Cable" Foreground="#E0FFFFFF" FontSize="15" VerticalAlignment="Center" TextWrapping="Wrap"/>
                            </Grid>

                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>
                                <Border Width="28" Height="28" CornerRadius="14" Background="#1A00E5FF" BorderBrush="#4000E5FF" BorderThickness="1" Margin="0,0,16,0" VerticalAlignment="Top">
                                    <TextBlock Text="3" Foreground="{StaticResource AccentBrush}" FontSize="13" FontWeight="Bold" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                </Border>
                                <TextBlock Grid.Column="1" Text="Allow the connection prompt on Phone" Foreground="#E0FFFFFF" FontSize="15" VerticalAlignment="Center" TextWrapping="Wrap"/>
                            </Grid>
                        </StackPanel>
                    </Border>
                </Grid>
                
                <!-- Footer â€” Branco Venn Button (Modern Glow) -->
                <Grid Grid.Row="2" VerticalAlignment="Bottom" HorizontalAlignment="Right" Margin="0,0,20,20">
                    <Button x:Name="BrancoVennBtn"
                            Click="BrancoVenn_Click"
                            Cursor="Hand"
                            Padding="0"
                            Background="Transparent"
                            BorderThickness="0">
                        <Button.Template>
                            <ControlTemplate TargetType="Button">
                                <Grid x:Name="root" Background="Transparent">
                                    
                                    <!-- Base border -->
                                    <Border CornerRadius="14" 
                                            BorderThickness="1.5" 
                                            BorderBrush="#30FFFFFF" 
                                            Background="Transparent"/>
                                    
                                    <!-- Animated spiraling border -->
                                    <Border x:Name="SpinningBorder" 
                                            CornerRadius="14" 
                                            BorderThickness="1.5" 
                                            Background="Transparent" 
                                            Opacity="0">
                                        <Border.BorderBrush>
                                            <LinearGradientBrush StartPoint="0.5,0" EndPoint="0.5,1">
                                                <LinearGradientBrush.RelativeTransform>
                                                    <RotateTransform x:Name="SpinTransform" CenterX="0.5" CenterY="0.5" Angle="0"/>
                                                </LinearGradientBrush.RelativeTransform>
                                                <GradientStop Color="#00E5FF" Offset="0.0"/>
                                                <GradientStop Color="Transparent" Offset="0.5"/>
                                                <GradientStop Color="#00E5FF" Offset="1.0"/>
                                            </LinearGradientBrush>
                                        </Border.BorderBrush>
                                    </Border>

                                    <!-- Label -->
                                    <TextBlock x:Name="BtnLabel"
                                               Text="Branco Venn&#x2122;"
                                               FontSize="11"
                                               FontWeight="SemiBold"
                                               Foreground="#99FFFFFF"
                                               HorizontalAlignment="Center"
                                               VerticalAlignment="Center"
                                               Margin="16,8"
                                               SnapsToDevicePixels="True"/>
                                </Grid>

                                <ControlTemplate.Triggers>
                                    <Trigger Property="IsMouseOver" Value="True">
                                        <Setter TargetName="SpinningBorder" Property="Opacity" Value="1"/>
                                        <Setter TargetName="BtnLabel" Property="Foreground" Value="#FFFFFF"/>
                                    </Trigger>
                                    <Trigger Property="IsPressed" Value="True">
                                        <Setter TargetName="SpinningBorder" Property="Opacity" Value="0.6"/>
                                        <Setter TargetName="BtnLabel" Property="Foreground" Value="#00E5FF"/>
                                    </Trigger>
                                    
                                    <EventTrigger RoutedEvent="MouseEnter">
                                        <BeginStoryboard x:Name="SpinStoryboard">
                                            <Storyboard>
                                                <DoubleAnimation Storyboard.TargetName="SpinTransform"
                                                                 Storyboard.TargetProperty="Angle"
                                                                 From="0" To="360"
                                                                 Duration="0:0:1.5"
                                                                 RepeatBehavior="Forever"/>
                                            </Storyboard>
                                        </BeginStoryboard>
                                    </EventTrigger>
                                    <EventTrigger RoutedEvent="MouseLeave">
                                        <RemoveStoryboard BeginStoryboardName="SpinStoryboard"/>
                                    </EventTrigger>
                                </ControlTemplate.Triggers>
                            </ControlTemplate>
                        </Button.Template>
                    </Button>
                </Grid>
                
            </Grid>
        </Grid>
    </Border>
</Window>
